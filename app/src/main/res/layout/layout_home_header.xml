<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <com.mhysa.waimai.ui.customerviews.scrollloop.AutoScrollPlayView
        android:id="@+id/layout_auto_play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.mhysa.waimai.ui.customerviews.scrollloop.AutoScrollLoopViewPager
            android:id="@+id/pager_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.mhysa.waimai.ui.customerviews.scrollloop.CirclePageIndicator
            android:id="@+id/indicator_two"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/pager_view"
            android:padding="10dip" />
    </com.mhysa.waimai.ui.customerviews.scrollloop.AutoScrollPlayView>

    <LinearLayout
        android:id="@+id/layout_errand"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#2196f3"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_personalized" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/errand_title"
            android:textColor="@color/white"
            android:textSize="15dp" />

    </LinearLayout>

    <com.mhysa.waimai.ui.customerviews.home.HomeTypeLayoutV2
        android:id="@+id/layout_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
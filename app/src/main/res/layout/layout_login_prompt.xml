<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_login_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_corner_5dp_white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:gravity="center"
            android:text="@string/not_login_tip"
            android:textColor="#4D4D4D"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@drawable/bg_bottom_corner_5dp_2196f3"
            android:gravity="center"
            android:text="@string/click_login"
            android:textColor="@color/white"
            android:textSize="15sp"/>
    </LinearLayout>
</LinearLayout>